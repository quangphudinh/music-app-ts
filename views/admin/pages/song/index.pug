extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{titlePage}

    .card.mb-3 
        .card-header Danh Sach 
        .card-body 
            .row 
                .col-8 

                .col-4.text-right 
                    a(href=`/${prefixAdmin}/songs/create`
                     class="btn btn-outline-success") + Thêm mới

                
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(type="checkbox" name="checkall")
                        th STT 
                        th Hình Ảnh 
                        th Tiêu Đề
                        //- th Ca Sĩ
                        //- th Chủ đề
                        //- th Vị Trí
                        th Trạng Thái
                        th Hoạt Động
                tbody 
                    each item, index in songs
                        tr
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value = item.id
                                ) 
                            td #{index + 1}
                            td  
                                img(src= item.avatar, alt= item.title width = '100px' height = 'auto')
                            td #{item.title}
                            //- td Dữ liệu ca sĩ
                            //- td Dữ liệu chủ đề
                            //- td Dữ liệu vị trí
                            td
                                if(item.status == 'active')
                                    a(
                                        href = "javascript:;" 
                                        data-id = item.id
                                        data-status= item.status
                                        button-change-status
                                        class= 'badge badge-success'
                                    ) Hoạt động 
                                else 
                                    a( 
                                        href = "javascript:;" 
                                        data-id = item.id
                                        data-status= item.status
                                        button-change-status
                                        class= 'badge badge-danger'
                                    ) Dừng hoạt động

                            td 
                                    a(
                                        href=`${prefixAdmin}/songs/detail/${item.id}` 
                                        class= 'btn btn-secondary btn-sm'
                                    ) Chi tiết 
                                   
                                    a(
                                        href=`${prefixAdmin}/songs/edit/${item.id}` 
                                        class= 'btn btn-warning btn-sm'
                                    ) Sửa
                                    button(
                                        class= 'btn btn-danger btn-sm ml-1'
                                        button-delete 
                                        data-id = item.id
                                    ) Xóa 