extends ../../layouts/default.pug

block main
    
    h1(class="mb-4") #{titlePage}
    
    form(
        action=`/${prefixAdmin}/songs/create`
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            lable(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            lable(for="topic") Chủ đề
            select(
                name="topicId"
                id="topic"
                class="form-control"
                required
            )
                option(value="" disabled selected) -- Chọn chủ đề --
                each item in topics 
                    option(value=item.id) #{item.title} 

        div(class="form-group")
            lable(for="singer") Ca sĩ
            select(
                name="singerId"
                id="singer"
                class="form-control"
                required
            )
                option(value="" disabled selected) -- Chọn Ca sĩ --
                each item in singers 
                    option(value= item.id) #{item.fullName} 
       
        div(
            class="form-group"
            upload-image
        )
            lable(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            div(class="form-group image-group")
                img(
                    src=""
                    alt=""
                    upload-image-preview  
                    class="image-preview"  
                )
                button(class="btn btn-close" remove-image-upload) x
            
        div(class="form-group")
            lable(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows='5'
            )

        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-inline") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusUnActive"
                name="status"
                value="inactive"
                checked
            )
            label(for="statusUnActive" class="form-check-inline") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới